<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.pokercast"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="17"/>
    <application android:label="@string/app_name"
                 android:icon="@drawable/s01"
                 android:theme="@style/Theme.AppCompat">
        <meta-data android:name="com.google.android.gms.version"
                   android:value="@integer/google_play_services_version" />
        <activity android:name=".activities.ConnectActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.JoinActivity"/>
        <activity android:name=".activities.MarkAsReadyActivity"/>
        <activity android:name=".activities.GamePlayActivity"/>
    </application>
</manifest>
